<Window x:Class="WebRequests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebRequests"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="TxtBlock" Background="Black" Foreground="Green" Height="300" Margin="20"></TextBlock>
            <Button x:Name="BtnPost" Margin="20" Content="Click me" Click="BtnPost_Click"/>
        </StackPanel>
    </Grid>
</Window>
